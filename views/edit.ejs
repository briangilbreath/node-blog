<% layout('layout') -%>

  <div class="jumbotron text-center">
      <% if( todo.slug == current ){ %>
      <form action="/update/<%= todo.slug %>" method="post" enctype="multipart/form-data" accept-charset="utf-8">
        <h1><input type="text" name="title" value="<%= todo.title %>" /></h1>
        <p><textarea class="form-control" rows="3" name="content" value="<%= todo.content %>" /><%= todo.content %></textarea></p>

        
          <img src="/uploads/thumbs/<%= todo.image_path  %>"><input id="image" class="form-control" rows="3" type="file" name="image"  placeholder="Choose Image" />

          <button type="submit" class="btn btn-default">Update</button>
      </form>
      <% } %>
    </span>
    
    <span>
      <a href="/destroy/<%= todo.slug %>" title="Delete this todo item">Delete</a>
    </span>
  </div>

  <hr>

  
  <a href="/">Back to Home</a>
